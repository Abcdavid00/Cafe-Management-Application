<materialDesign:Card Background="{DynamicResource LinearBackground}"
                                                                                     UniformCornerRadius="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                                                                            Text="{Binding Id}"
                                                                            FontSize="30"
                                                                            Foreground="{DynamicResource SolidLight}"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Left"
                                                                            Margin="10,0,0,0"
                                                                        />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:PackIcon Kind="Account"
                                                                                Grid.Row="0"
                                                                                Grid.Column="0"
                                                                                Grid.RowSpan="2"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                Width="100"
                                                                                Height="100"
                                                                                Margin="10,0,0,0"                                          
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                            />

            <TextBlock Grid.Row="0" Grid.Column="1"
                                                                                Text="Manager"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="10,0,0,0"
                                                                            />

            <TextBlock Grid.Row="1" Grid.Column="1"
                                                                                Text="{Binding ManagerName}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="10,0,0,0"
                                                                            />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                                                                                Text="Address"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
            <TextBlock Grid.Row="1" 
                                                                                Text="{Binding Address}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
        </Grid>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                                                                                Text="Revenue"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

            <TextBlock Grid.Row="1" Grid.Column="0"
                                                                                Text="This month"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

            <TextBlock Grid.Row="1" Grid.Column="1"
                                                                                Text="Last month"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

            <TextBlock Grid.Row="2" Grid.Column="0"
                                                                                Text="{Binding ThisMonthRevenue}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

            <TextBlock Grid.Row="2" Grid.Column="1"
                                                                                Text="{Binding LastMonthRevenue}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
            <TextBlock Grid.Row="3" Grid.Column="0"
                                                                                Text="{Binding Compare}"
                                                                                FontSize="20"
                                                                                Grid.ColumnSpan="2"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
        </Grid>
    </Grid>
</materialDesign:Card>