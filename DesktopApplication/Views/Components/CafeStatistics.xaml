<UserControl
    x:Class="CSWBManagementApplication.Views.Components.CafeStatistics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:CSWBManagementApplication.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSWBManagementApplication.Views.Components"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource LinearDarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="290*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="660*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="980*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="290*" />
            </Grid.ColumnDefinitions>

            <!--  Time card  -->
            <materialDesign:Card
                Grid.Column="0"
                Background="{DynamicResource SolidDark}"
                UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="160*" />
                        <RowDefinition Height="790*" />
                        <RowDefinition Height="40*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="960*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="{DynamicResource LinearMain}"
                        Text="Time" />

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="240*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="240*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="240*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="240*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="118.133" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="118*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="118*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="118*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="Filter by" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="From" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="White"
                            Text="To" />

                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="85*" />
                            </Grid.ColumnDefinitions>

                            <RadioButton
                                Grid.Column="0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding FilterByDayCommand, Mode=OneWay}"
                                GroupName="Filter by"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignRadioButton}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Foreground="White"
                                Text="Day" />

                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="85*" />
                            </Grid.ColumnDefinitions>

                            <RadioButton
                                Grid.Column="0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding FilterByMonthCommand, Mode=OneWay}"
                                GroupName="Filter by"
                                Style="{StaticResource MaterialDesignRadioButton}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Foreground="White"
                                Text="Month" />

                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="85*" />
                            </Grid.ColumnDefinitions>

                            <RadioButton
                                Grid.Column="0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Command="{Binding FilterByYearCommand, Mode=OneWay}"
                                GroupName="Filter by"
                                Style="{StaticResource MaterialDesignRadioButton}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Foreground="White"
                                Text="Year" />
                        </Grid>

                        <!--  -ComboBox Day  -->
                        <ComboBox
                            Grid.Row="3"
                            Grid.Column="3"
                            Width="100"
                            Padding="10,5,10,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            IsEnabled="{Binding IsDateEnabled, Mode=OneWay}"
                            SelectedIndex="{Binding FDateIndex}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="01" Tag="01" />
                                <ComboBoxItem Content="02" Tag="02" />
                                <ComboBoxItem Content="03" Tag="03" />
                                <ComboBoxItem Content="04" Tag="04" />
                                <ComboBoxItem Content="05" Tag="05" />
                                <ComboBoxItem Content="06" Tag="06" />
                                <ComboBoxItem Content="07" Tag="07" />
                                <ComboBoxItem Content="08" Tag="08" />
                                <ComboBoxItem Content="09" Tag="09" />
                                <ComboBoxItem Content="10" Tag="10" />
                                <ComboBoxItem Content="11" Tag="11" />
                                <ComboBoxItem Content="12" Tag="12" />
                                <ComboBoxItem Content="13" Tag="13" />
                                <ComboBoxItem Content="14" Tag="14" />
                                <ComboBoxItem Content="15" Tag="15" />
                                <ComboBoxItem Content="16" Tag="16" />
                                <ComboBoxItem Content="17" Tag="17" />
                                <ComboBoxItem Content="18" Tag="18" />
                                <ComboBoxItem Content="19" Tag="19" />
                                <ComboBoxItem Content="20" Tag="20" />
                                <ComboBoxItem Content="21" Tag="21" />
                                <ComboBoxItem Content="22" Tag="22" />
                                <ComboBoxItem Content="23" Tag="23" />
                                <ComboBoxItem Content="24" Tag="24" />
                                <ComboBoxItem Content="25" Tag="25" />
                                <ComboBoxItem Content="26" Tag="26" />
                                <ComboBoxItem Content="27" Tag="27" />
                                <ComboBoxItem Content="28" Tag="28" />
                                <ComboBoxItem Content="29" Tag="29" />
                                <ComboBoxItem Content="30" Tag="30" />
                                <ComboBoxItem Content="31" Tag="31" />
                            </ComboBox.Items>
                        </ComboBox>

                        <!--  -ComboBox Month  -->
                        <ComboBox
                            Grid.Row="3"
                            Grid.Column="5"
                            Width="100"
                            Padding="10,5,10,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            IsEnabled="{Binding IsMonthEnabled, Mode=OneWay}"
                            SelectedIndex="{Binding FMonthIndex}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="01" Tag="01" />
                                <ComboBoxItem Content="02" Tag="02" />
                                <ComboBoxItem Content="03" Tag="03" />
                                <ComboBoxItem Content="04" Tag="04" />
                                <ComboBoxItem Content="05" Tag="05" />
                                <ComboBoxItem Content="06" Tag="06" />
                                <ComboBoxItem Content="07" Tag="07" />
                                <ComboBoxItem Content="08" Tag="08" />
                                <ComboBoxItem Content="09" Tag="09" />
                                <ComboBoxItem Content="10" Tag="10" />
                                <ComboBoxItem Content="11" Tag="11" />
                                <ComboBoxItem Content="12" Tag="12" />
                            </ComboBox.Items>
                        </ComboBox>

                        <!--  -ComboBox Year  -->
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="7"
                            Width="100"
                            Padding="3,3,3,3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding FYearString, UpdateSourceTrigger=PropertyChanged}" />


                        <CheckBox
                            x:Name="ToCheckBox"
                            Grid.Row="5"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding IsToEnabled}"
                            IsThreeState="False" />

                        <!--  -ComboBox Day  -->
                        <ComboBox
                            Grid.Row="5"
                            Grid.Column="3"
                            Width="100"
                            Padding="10,5,10,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            IsEnabled="{Binding IsTDateEnabled, Mode=OneWay}"
                            SelectedIndex="{Binding TDateIndex}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="01" Tag="01" />
                                <ComboBoxItem Content="02" Tag="02" />
                                <ComboBoxItem Content="03" Tag="03" />
                                <ComboBoxItem Content="04" Tag="04" />
                                <ComboBoxItem Content="05" Tag="05" />
                                <ComboBoxItem Content="06" Tag="06" />
                                <ComboBoxItem Content="07" Tag="07" />
                                <ComboBoxItem Content="08" Tag="08" />
                                <ComboBoxItem Content="09" Tag="09" />
                                <ComboBoxItem Content="10" Tag="10" />
                                <ComboBoxItem Content="11" Tag="11" />
                                <ComboBoxItem Content="12" Tag="12" />
                                <ComboBoxItem Content="13" Tag="13" />
                                <ComboBoxItem Content="14" Tag="14" />
                                <ComboBoxItem Content="15" Tag="15" />
                                <ComboBoxItem Content="16" Tag="16" />
                                <ComboBoxItem Content="17" Tag="17" />
                                <ComboBoxItem Content="18" Tag="18" />
                                <ComboBoxItem Content="19" Tag="19" />
                                <ComboBoxItem Content="20" Tag="20" />
                                <ComboBoxItem Content="21" Tag="21" />
                                <ComboBoxItem Content="22" Tag="22" />
                                <ComboBoxItem Content="23" Tag="23" />
                                <ComboBoxItem Content="24" Tag="24" />
                                <ComboBoxItem Content="25" Tag="25" />
                                <ComboBoxItem Content="26" Tag="26" />
                                <ComboBoxItem Content="27" Tag="27" />
                                <ComboBoxItem Content="28" Tag="28" />
                                <ComboBoxItem Content="29" Tag="29" />
                                <ComboBoxItem Content="30" Tag="30" />
                                <ComboBoxItem Content="31" Tag="31" />
                            </ComboBox.Items>
                        </ComboBox>

                        <!--  -ComboBox Month  -->
                        <ComboBox
                            Grid.Row="5"
                            Grid.Column="5"
                            Width="100"
                            Padding="10,5,10,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            IsEnabled="{Binding IsTMonthEnabled, Mode=OneWay}"
                            SelectedIndex="{Binding TMonthIndex}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="01" Tag="01" />
                                <ComboBoxItem Content="02" Tag="02" />
                                <ComboBoxItem Content="03" Tag="03" />
                                <ComboBoxItem Content="04" Tag="04" />
                                <ComboBoxItem Content="05" Tag="05" />
                                <ComboBoxItem Content="06" Tag="06" />
                                <ComboBoxItem Content="07" Tag="07" />
                                <ComboBoxItem Content="08" Tag="08" />
                                <ComboBoxItem Content="09" Tag="09" />
                                <ComboBoxItem Content="10" Tag="10" />
                                <ComboBoxItem Content="11" Tag="11" />
                                <ComboBoxItem Content="12" Tag="12" />
                            </ComboBox.Items>
                        </ComboBox>

                        <!--  -ComboBox Year  -->
                        <TextBox
                            Grid.Row="5"
                            Grid.Column="7"
                            Width="100"
                            Padding="3,3,3,3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            IsEnabled="{Binding IsToEnabled, Mode=OneWay}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding FYearString, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Grid.Row="7"
                            Grid.Column="7"
                            Width="35"
                            Height="35"
                            Margin="0"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Command="{Binding SearchCommand, Mode=OneWay}"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                            ToolTip="MaterialDesignFloatingActionMiniDarkButton">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="Search" />
                        </Button>


                    </Grid>

                </Grid>

            </materialDesign:Card>

            <!--  Card Information  -->
            <materialDesign:Card
                Grid.Column="2"
                Background="{DynamicResource SolidDark}"
                UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="160*" />
                        <RowDefinition Height="790*" />
                        <RowDefinition Height="40*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="940*" />
                        <ColumnDefinition Width="30*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="{DynamicResource LinearMain}"
                        Text="Info" />

                    <!--<TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Foreground="{DynamicResource TextColorDarkGray}"
                        Text="Edit" />-->
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <!--<ColumnDefinition Width="0*"/>-->
                            <ColumnDefinition Width="980*" />
                            <ColumnDefinition Width="10*" />
                        </Grid.ColumnDefinitions>

                        <!--  Manager info  -->
                        <Grid Grid.Row="0" Grid.Column="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="80*" />
                            </Grid.ColumnDefinitions>

                            <!--<Image Grid.Row="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Source="Assets/Logo.png"
                                   Width="50"
                                   Height="50"
                                   Stretch="UniformToFill"/>-->

                            <materialDesign:PackIcon
                                Grid.Row="0"
                                Width="auto"
                                Height="auto"
                                Margin="10,10,10,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SolidLight}"
                                Kind="AccountCircle" />

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="{DynamicResource SolidLight}"
                                    Text="Manager" />

                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="17"
                                    Foreground="{DynamicResource TextColorDarkerGray}"
                                    Text="Huynh Duy Khang " />

                            </StackPanel>
                        </Grid>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                            <WrapPanel>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="{DynamicResource SolidLight}"
                                    Text="Address" />

                                <Button
                                    Width="17"
                                    Height="17"
                                    Margin="10,0,0,0"
                                    Padding="0,0,0,2"
                                    VerticalAlignment="Center"
                                    Command="{Binding SaveAddressCommand, Mode=OneWay}"
                                    ToolTip="Save">
                                    <materialDesign:PackIcon
                                        Height="15"
                                        VerticalAlignment="Center"
                                        Kind="FloppyDisc" />
                                </Button>

                                <Button
                                    Width="17"
                                    Height="17"
                                    Margin="10,0,0,0"
                                    Padding="0,0,0,2"
                                    VerticalAlignment="Center"
                                    Command="{Binding DiscardAddressCommand, Mode=OneWay}"
                                    ToolTip="Cancel">
                                    <materialDesign:PackIcon
                                        Height="15"
                                        VerticalAlignment="Center"
                                        Kind="Cancel" />
                                </Button>
                            </WrapPanel>


                            <TextBox
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="17"
                                Foreground="#AAAAAA"
                                Text="{Binding Address}"
                                TextWrapping="Wrap" />

                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="300*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="600*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card
                 Visibility="Collapsed"
                Grid.Column="0"
                Background="{DynamicResource SolidDark}"
                Foreground="{DynamicResource SolidLight}"
                UniformCornerRadius="10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="9*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*" />
                        <ColumnDefinition Width="880*" />
                        <ColumnDefinition Width="60*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource LinearMain}"
                        Text="Revenue" />

                    <Grid
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Height="auto"
                        Margin="0,0,0,10"
                        VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="9*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Height="auto"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Time" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Revenue" />

                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
                            <ItemsControl
                                Margin="10,0,10,10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding StaffInfos, Mode=OneWay}"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.VirtualizationMode="Recycling">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Height="auto"
                                            Margin="5,5,5,5"
                                            Padding="10"
                                            HorizontalContentAlignment="Stretch"
                                            materialDesign:ButtonAssist.CornerRadius="10"
                                            Background="{Binding Background, Mode=OneWay}"
                                            Command="{Binding Command, Mode=OneWay}"
                                            Foreground="{Binding Foreground, Mode=OneWay}">
                                            <Grid Margin="15,5,5,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Padding="0,0,10,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Time, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Revenue, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <Line
                            Stretch="Uniform"
                            Stroke="#666666"
                            StrokeThickness="0.5"
                            X1="0"
                            X2="1"
                            Y1="0"
                            Y2="0" />
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="{Binding TotalRevenue}" />

                    </StackPanel>
                </Grid>

            </materialDesign:Card>

            <materialDesign:Card
                 Visibility="Collapsed"
                Grid.Column="2"
                Background="{DynamicResource SolidDark}"
                Foreground="{DynamicResource SolidLight}"
                UniformCornerRadius="10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="9*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="940*" />
                        <ColumnDefinition Width="30*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource LinearMain}"
                        Text="Drinks" />

                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="auto"
                        Margin="0,0,0,10"
                        VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="9*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Height="auto"
                            Margin="10,0,10,5"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Name" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Size" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Sold" />
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding StaffInfos, Mode=OneWay}"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.VirtualizationMode="Recycling">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Height="auto"
                                            Margin="5,5,5,5"
                                            Padding="10"
                                            HorizontalContentAlignment="Stretch"
                                            materialDesign:ButtonAssist.CornerRadius="10"
                                            Background="{Binding Background, Mode=OneWay}"
                                            Command="{Binding Command, Mode=OneWay}"
                                            Foreground="{Binding Foreground, Mode=OneWay}">
                                            <Grid Margin="15,5,5,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition Width="0.5*" />
                                                    <ColumnDefinition Width="1.5*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Padding="0,0,10,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Name, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Size, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Sold, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                    </Grid>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <Line
                            Stretch="Uniform"
                            Stroke="#666666"
                            StrokeThickness="0.5"
                            X1="0"
                            X2="1"
                            Y1="0"
                            Y2="0" />
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="{Binding TotalSold}" />

                    </StackPanel>
                </Grid>

            </materialDesign:Card>

            <materialDesign:Card
                Grid.Column="0"
                Grid.ColumnSpan="5"
                Background="{DynamicResource SolidDark}"
                Foreground="{DynamicResource SolidLight}"
                UniformCornerRadius="10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="9*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="590*" />
                        <ColumnDefinition Width="20*" />
                        <ColumnDefinition Width="300*" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource LinearMain}"
                        Text="Order History" />

                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="auto"
                        Margin="0,0,0,10"
                        VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="9*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Height="auto"
                            Margin="10,0,10,5"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Time" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Placed By" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource MediumFontSize}"
                                FontWeight="Bold"
                                Text="Total" />
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding HistoryOrders, Mode=OneWay}"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.VirtualizationMode="Recycling">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Height="auto"
                                            Margin="0,5,0,5"
                                            Padding="10"
                                            HorizontalContentAlignment="Stretch"
                                            materialDesign:ButtonAssist.CornerRadius="10"
                                            Background="{DynamicResource SolidLight}"
                                            BorderBrush="Transparent"
                                            Command="{Binding Command, Mode=OneWay}"
                                            Foreground="{Binding Foreground, Mode=OneWay}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.75*" />
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Padding="0,0,10,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Time, Mode=OneWay}"
                                                    TextWrapping="Wrap" />


                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding StaffName, Mode=OneWay}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Total, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>


                    </Grid>

                    <materialDesign:Card
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="3"
                        Margin="0,10,0,10"
                        Background="#666666"
                        UniformCornerRadius="10">

                        <ContentControl Content="{Binding OrderDetails, Mode=OneWay}">
                            <ContentControl.ContentTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="20*" />
                                            <RowDefinition Height="0.5*" />
                                            <RowDefinition Height="200*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="10*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="Order Detail" />

                                        <Grid Grid.Row="3" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1.5*" />
                                                <RowDefinition Height="0.1*" />
                                                <RowDefinition Height="auto" MaxHeight="95" />
                                                <RowDefinition Height="0.1*" />
                                                <RowDefinition Height="4.3*" />
                                                <RowDefinition Height="0.1*" />
                                                <RowDefinition Height="1.5*" />
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0">
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Text="Time" />
                                                <WrapPanel Margin="15,0,0,0">
                                                    <TextBlock
                                                        Margin="0,0,5,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="17"
                                                        Foreground="#BBBBBB"
                                                        Text="{Binding Time, Mode=OneWay}" />
                                                </WrapPanel>
                                            </StackPanel>



                                            <StackPanel Grid.Row="2">
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Text="Placed By" />
                                                <Grid Margin="15,0,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="5*" />
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon
                                                        Grid.Column="0"
                                                        Width="auto"
                                                        Height="auto"
                                                        MaxWidth="30"
                                                        MaxHeight="30"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Foreground="{DynamicResource SolidLight}"
                                                        Kind="AccountCircle" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Margin="5,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="17"
                                                        Foreground="#BBBBBB"
                                                        Text="{Binding StaffName}"
                                                        TextWrapping="Wrap" />
                                                </Grid>

                                            </StackPanel>

                                            <Grid Grid.Row="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="5*" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Text="Order List" />

                                                <Grid Grid.Row="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="9*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid
                                                        Grid.Row="0"
                                                        Height="auto"
                                                        VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="4*" />
                                                            <ColumnDefinition Width="1*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="17"
                                                            FontWeight="Bold"
                                                            Foreground="#BBBBBB"
                                                            Text="Name" />
                                                        <TextBlock
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            FontSize="17"
                                                            FontWeight="Bold"
                                                            Foreground="#BBBBBB"
                                                            Text="QTY" />
                                                    </Grid>

                                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden"
                                                                  Padding="0 5 0 5">
                                                        <ItemsControl                                                           
                                                            Margin="0,0,0,10"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            ItemsSource="{Binding Products, Mode=OneWay}"
                                                            VirtualizingPanel.IsVirtualizing="True"
                                                            VirtualizingPanel.VirtualizationMode="Recycling">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Vertical" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button
                                                                        Height="auto"
                                                                        Margin="0,5,0,5"
                                                                        Padding="10"
                                                                        HorizontalContentAlignment="Stretch"
                                                                        materialDesign:ButtonAssist.CornerRadius="7"
                                                                        Background="{DynamicResource SolidLight}"
                                                                        BorderBrush="Transparent"
                                                                        Command="{Binding Command, Mode=OneWay}">
                                                                        <Grid Margin="0,5,0,5">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="4*" />
                                                                                <ColumnDefinition Width="1*" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <TextBlock
                                                                                Grid.Column="0"
                                                                                Padding="0,0,10,0"
                                                                                VerticalAlignment="Center"
                                                                                Foreground="{DynamicResource SolidDark}"
                                                                                Text="{Binding CombinedName, Mode=OneWay}"
                                                                                TextWrapping="Wrap" />
                                                                            <TextBlock
                                                                                Grid.Column="1"
                                                                                Padding="0,0,5,0"
                                                                                HorizontalAlignment="Right"
                                                                                VerticalAlignment="Center"
                                                                                Foreground="{DynamicResource SolidDark}"
                                                                                Text="{Binding Quantity, Mode=OneWay}"
                                                                                TextWrapping="Wrap" />
                                                                        </Grid>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </ScrollViewer>
                                                </Grid>

                                            </Grid>

                                            <StackPanel Grid.Row="6">
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Text="Total" />
                                                <TextBlock
                                                    Margin="15,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="17"
                                                    Foreground="#BBBBBB"
                                                    Text="{Binding TotalString, Mode=OneWay}" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </materialDesign:Card>

                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <Line
                            Margin="0,0,0,5"
                            Stretch="Uniform"
                            Stroke="#666666"
                            StrokeThickness="0.5"
                            X1="0"
                            X2="1"
                            Y1="0"
                            Y2="0" />
                        <WrapPanel HorizontalAlignment="Right">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="17"
                                Text="Total Orders : " />
                            <TextBlock
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="17"
                                Text="{Binding TotalOrdersString, Mode=OneWay}" />
                        </WrapPanel>


                    </StackPanel>
                </Grid>

            </materialDesign:Card>
        </Grid>

