<UserControl x:Class="CSWBManagementApplication.Views.Components.CafeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CSWBManagementApplication.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <materialDesign:Card Background="{DynamicResource LinearBackground}"
                                                                                     UniformCornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                                                                            Text="{Binding Id}"
                                                                            FontSize="30"
                                                                            Foreground="{DynamicResource SolidLight}"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Left"
                                                                            Margin="10,0,0,0"
                                                                        />

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Kind="Account"
                                                                                Grid.Row="0"
                                                                                Grid.Column="0"
                                                                                Grid.RowSpan="2"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                Width="100"
                                                                                Height="100"
                                                                                Margin="10,0,0,0"                                          
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                            />

                    <TextBlock Grid.Row="0" Grid.Column="1"
                                                                                Text="Manager"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="10,0,0,0"
                                                                            />

                    <TextBlock Grid.Row="1" Grid.Column="1"
                                                                                Text="{Binding ManagerName}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="10,0,0,0"
                                                                            />
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                                                                                Text="Address"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                    <TextBlock Grid.Row="1" 
                                                                                Text="{Binding Address}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                                                                                Text="Revenue"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                                                Text="This month"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                    <TextBlock Grid.Row="1" Grid.Column="1"
                                                                                Text="Last month"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                    <TextBlock Grid.Row="2" Grid.Column="0"
                                                                                Text="{Binding ThisMonthRevenue}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                    <TextBlock Grid.Row="2" Grid.Column="1"
                                                                                Text="{Binding LastMonthRevenue}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                    <TextBlock Grid.Row="3" Grid.Column="0"
                                                                                Text="{Binding Compare}"
                                                                                FontSize="20"
                                                                                Grid.ColumnSpan="2"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
