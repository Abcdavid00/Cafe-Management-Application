<UserControl x:Class="CSWBManagementApplication.Views.OwnerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSWBManagementApplication.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                    Background="{DynamicResource SolidDark}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <Image Grid.Row="0"
                           Source="../Assets/Logo.png"
                />


                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding NavigationChips}"
                              >
                    <ItemsControl.ItemsPanel>

                        <ItemsPanelTemplate>

                            <StackPanel/>

                        </ItemsPanelTemplate>

                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>

                        <DataTemplate>

                            <materialDesign:Chip  Content="{Binding Content}"
                                                  Style="{StaticResource MaterialDesignOutlineChip}"
                                                  FontSize="{DynamicResource MediumFontSize}"
                                                  Margin="10, 5, 10, 5"
                                                  Background="Transparent"
                                                  Foreground="{Binding Foreground}"
                                                  IconBackground="Transparent"
                                                  IconForeground="{Binding Foreground}"
                                                  Command="{Binding Command}"
                                                  BorderThickness="2"
                                                  BorderBrush="{Binding BorderBrush}"
                                                  Width="150"
                                                  Height="50"
                            >

                                <materialDesign:Chip.Icon>

                                    <materialDesign:PackIcon Kind="{Binding Icon}"/>

                                </materialDesign:Chip.Icon>

                            </materialDesign:Chip>

                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Grid.Row="2"
                            Orientation="Vertical"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0">

                    <Button Content="{materialDesign:PackIcon Logout}"
                            ToolTip="Log out"
                            Margin="10, 10, 10, 10"
                            HorizontalAlignment="Left"
                            Command="{Binding Path=LogoutCommand, Mode=OneWay}"
                    />

                </StackPanel>

            </Grid>

        </Border>

        <materialDesign:Transitioner Grid.Column="1"
                                     SelectedIndex="1"
                                     Background="{DynamicResource LinearDarkBackground}">
            <materialDesign:TransitionerSlide>

                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Down"/>
                </materialDesign:TransitionerSlide.BackwardWipe>

                <ContentControl>
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="Home View"
                                       FontSize="70"
                                       Foreground="{DynamicResource SolidLight}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>

                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Up"/>
                </materialDesign:TransitionerSlide.ForwardWipe>

            </materialDesign:TransitionerSlide>

            <materialDesign:TransitionerSlide>

                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Down"/>
                </materialDesign:TransitionerSlide.BackwardWipe>

                <ContentControl>
                    <ContentControl.ContentTemplate>
                        <DataTemplate>

                            <materialDesign:Transitioner SelectedIndex="0">

                                <materialDesign:TransitionerSlide>
                                    <materialDesign:TransitionerSlide.BackwardWipe>
                                        <materialDesign:SlideWipe Direction="Down"/>
                                    </materialDesign:TransitionerSlide.BackwardWipe>

                                    <ContentControl>
                                        <ContentControl.ContentTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="21*"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="24*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Row="1" Grid.Column="1"
                                                                Orientation="Horizontal"
                                                                HorizontalAlignment="Left"
                                                                 >
                                                        <materialDesign:PackIcon Kind="Search"
                                                                                 Foreground="White"
                                                                                 Width="auto"
                                                                                 Height="auto"
                                                                                 />
                                                        
                                                        <TextBox materialDesign:HintAssist.Hint="Search"
                                                                 FontSize="25"
                                                                 Foreground="{DynamicResource SolidLight}"
                                                                 VerticalAlignment="Center"
                                                                 HorizontalAlignment="Left"
                                                                 Margin="10,0,0,0"
                                                                   />

                                                    </StackPanel>
                                                    <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding CafesList}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <materialDesign:Card Background="{DynamicResource LinearBackground}"
                                                                                     UniformCornerRadius="10">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="*"/>
                                                                            <RowDefinition Height="2*"/>
                                                                            <RowDefinition Height="2*"/>
                                                                            <RowDefinition Height="5*"/>
                                                                        </Grid.RowDefinitions>

                                                                        <TextBlock Grid.Row="0"
                                                                            Text="{Binding Id}"
                                                                            FontSize="30"
                                                                            Foreground="{DynamicResource SolidLight}"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Left"
                                                                            Margin="10,0,0,0"
                                                                        />

                                                                        <Grid Grid.Row="1">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="*"/>
                                                                                <RowDefinition Height="*"/>
                                                                            </Grid.RowDefinitions>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="7*"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <materialDesign:PackIcon Kind="Account"
                                                                                Grid.Row="0"
                                                                                Grid.Column="0"
                                                                                Grid.RowSpan="2"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                Width="100"
                                                                                Height="100"
                                                                                Margin="10,0,0,0"                                          
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                            />

                                                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                                                Text="Manager"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="10,0,0,0"
                                                                            />

                                                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                                                Text="{Binding ManagerName}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="10,0,0,0"
                                                                            />
                                                                        </Grid>

                                                                        <Grid Grid.Row="2">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="*"/>
                                                                                <RowDefinition Height="*"/>
                                                                            </Grid.RowDefinitions>

                                                                            <TextBlock Grid.Row="0" 
                                                                                Text="Address"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                                                                            <TextBlock Grid.Row="1" 
                                                                                Text="{Binding Address}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                                                                        </Grid>

                                                                        <Grid Grid.Row="3">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="*"/>
                                                                                <RowDefinition Height="*"/>
                                                                                <RowDefinition Height="*"/>
                                                                                <RowDefinition Height="*"/>
                                                                            </Grid.RowDefinitions>

                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                                                Text="Revenue"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                                                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                                                Text="This month"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                                                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                                                Text="Last month"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                                                                            <TextBlock Grid.Row="2" Grid.Column="0"
                                                                                Text="{Binding ThisMonthRevenue}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />

                                                                            <TextBlock Grid.Row="2" Grid.Column="1"
                                                                                Text="{Binding LastMonthRevenue}"
                                                                                FontSize="20"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                                                                            <TextBlock Grid.Row="3" Grid.Column="0"
                                                                                Text="{Binding Compare}"
                                                                                FontSize="20"
                                                                                Grid.ColumnSpan="2"
                                                                                Foreground="{DynamicResource SolidLight}"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"
                                                                                Margin="15,0,0,0"
                                                                            />
                                                                        </Grid>
                                                                    </Grid>
                                                                </materialDesign:Card>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </DataTemplate>
                                        </ContentControl.ContentTemplate>
                                    </ContentControl>

                                    <materialDesign:TransitionerSlide.ForwardWipe>
                                        <materialDesign:SlideWipe Direction="Up"/>
                                    </materialDesign:TransitionerSlide.ForwardWipe>
                                </materialDesign:TransitionerSlide>

                                <materialDesign:TransitionerSlide>

                                </materialDesign:TransitionerSlide>

                            </materialDesign:Transitioner>

                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>

                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Up"/>
                </materialDesign:TransitionerSlide.ForwardWipe>

            </materialDesign:TransitionerSlide>

            <materialDesign:TransitionerSlide>

                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Down"/>
                </materialDesign:TransitionerSlide.BackwardWipe>

                <ContentControl>
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="Employee View"
                                       FontSize="70"
                                       Foreground="{DynamicResource SolidLight}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>

                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Up"/>
                </materialDesign:TransitionerSlide.ForwardWipe>

            </materialDesign:TransitionerSlide>

            <materialDesign:TransitionerSlide>

                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Down"/>
                </materialDesign:TransitionerSlide.BackwardWipe>

                <ContentControl>
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="Products View"
                                       FontSize="70"
                                       Foreground="{DynamicResource SolidLight}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>

                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Up"/>
                </materialDesign:TransitionerSlide.ForwardWipe>

            </materialDesign:TransitionerSlide>

        </materialDesign:Transitioner>



    </Grid>
</UserControl>
